{
  "name": "mashup",
  "description": "mashup project",
  "scripts": {
    "lint_js": "jshint --extract=auto --extra-ext=.html .",
    "test": "echo '---Validating HTML---' && npm run validate_html && echo '---Validating JavaScript---' && npm run lint_js",
    "validate_html": "html-validator --file=index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/advanced-js/mashup.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-js/mashup/issues"
  },
  "homepage": "https://github.com/advanced-js/mashup",
  "devDependencies": {
    "html-validator-cli": "^2.0.0",
    "jshint": "^2.9.3"
  },
  "jshintConfig": {
    "browser": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "latedef": true,
    "maxdepth": 4,
    "maxparams": 3,
    "maxstatements": 10,
    "newcap": true
  }
}
